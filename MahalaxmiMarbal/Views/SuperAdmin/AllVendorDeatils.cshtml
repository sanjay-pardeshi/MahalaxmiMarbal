                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor_Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shop_Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shop_Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor_Email)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
