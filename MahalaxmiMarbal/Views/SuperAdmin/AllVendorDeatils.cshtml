@model IEnumerable<MahalaxmiMarbal.Models.Table_Vendor_Registration>

@{
    ViewBag.Title = "AllVendorDeatils";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<link href="~/Content/SuperAdmin/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/SuperAdmin/adminlte.min.css" rel="stylesheet" />

<div class="content-wrapper">
    <div class="row" style="background-color:#343a40;">

        <div class="col-12 col-sm-6 col-md-4">

            @Html.ActionLink("Create New", "Create", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary btn-large " })

        </div>
        <div class="col-12 col-sm-6 col-md-8">
            <h4><b style="font-style:normal; color:white">VENDOR DETAILS</b></h4>

        </div>

    </div>
    <br />
