                <th>
                    @Html.DisplayNameFor(model => model.Vendor_Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shop_Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shop_Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vendor_Email)
                </th>
                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendor_Name)
                    </td>
                    <td>
