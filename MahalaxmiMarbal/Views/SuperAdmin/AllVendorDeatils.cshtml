</div>
<script src="~/Scripts/SuperAdmin/jquery.min.js"></script>
<script src="~/Scripts/SuperAdmin/jquery.dataTables.js"></script>
<script src="~/Scripts/SuperAdmin/dataTables.bootstrap4.js"></script>
<script>
        $(function () {

            $('#example').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
            });
        });
</script>
